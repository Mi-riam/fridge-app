<!DOCTYPE html>
<html lang="en">
  <%- include('partials/_head'); %>

  <body>
    <%- include('partials/_nav'); %>
    <main class="container mt-5">
      <h1 class="mb-4">Fridge Items</h1>
      <ul class="list-group">
        <% fridgeItems.forEach((item) => { %>
        <li
          class="list-group-item d-flex justify-content-between align-items-center"
        >
          <div
            class="d-flex justify-content-between"
            style="width: calc(100% - 100px)"
          >
            <div><b><%= item.grocery.name %></b></div>

            <div>
              <span class="text-secondary me-3"
                >amount: <%= item.amount %></span
              >

              <span class="small" style="<%= item.expirationInfo.style %>">
                <%= item.expirationInfo.message %>
              </span>
            </div>
          </div>

          <div>
            <a class="btn btn-sm btn-danger" href="/fridge/delete/<%= item.id %>"
              >Delete</a
            >
          </div>
        </li>
        <% }); %>
      </ul>

      <h2 class="mt-5 mb-3">Add New Item</h2>
      <form action="/fridge" method="POST" class="row g-3">
        <div class="col-md-6">
          <label for="itemName" class="form-label">Item Name:</label>
          <input
            type="text"
            id="itemName"
            name="itemName"
            class="form-control"
            required
          />
        </div>

        <div class="col-md-6">
          <label for="amount" class="form-label">Amount:</label>
          <input
            type="number"
            id="amount"
            name="amount"
            class="form-control"
            required
          />
        </div>

        <div class="col-12">
          <button type="submit" class="btn btn-primary">Add Item</button>
        </div>
      </form>
    </main>
  </body>
</html>
